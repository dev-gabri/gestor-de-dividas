{
  "name": "gestor-de-dividas",
  "version": "1.0.0",
  "description": "Comercial Fagundes - Gestao de fiado em Electron + React",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "npm --prefix renderer run dev",
    "dev:electron": "env -u ELECTRON_RUN_AS_NODE sh -c 'wait-on http://localhost:5173 && electron .'",
    "lint": "npm --prefix renderer run lint",
    "build:renderer": "npm --prefix renderer run build",
    "build": "npm run build:renderer",
    "check": "npm run lint && npm run build",
    "pack": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run dist:win",
    "dist:mac": "xattr -cr . && npm run build:renderer && electron-builder --mac dmg --x64 --arm64",
    "dist:mac:x64": "xattr -cr . && npm run build:renderer && electron-builder --mac dmg --x64",
    "dist:mac:arm64": "xattr -cr . && npm run build:renderer && electron-builder --mac dmg --arm64",
    "dist:win": "npm run build:renderer && electron-builder --win nsis --x64",
    "dist:win:arm64": "npm run build:renderer && electron-builder --win nsis --arm64",
    "dist:linux": "npm run build:renderer && electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "kill-port": "^2.0.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.comercialfagundes.gestordedividas",
    "productName": "Comercial Fagundes",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "renderer/dist/**/*",
      "logo.png",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business",
      "icon": "build/icon.icns",
      "identity": "-",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "artifactName": "Comercial-Fagundes-Setup.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  }
}
